{
  "name": "development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [1234],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
"postCreateCommand": "poetry install --with dev && poetry run pre-commit install",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python-pylance"
      ]
    }
  }
}
